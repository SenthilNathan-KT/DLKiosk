<!DOCTYPE html>
<html lang="en">
    
    <%- include("layouts/header") -%>
    <body id="page-top" class="g2body">
        <!-- Navigation-->
        <%- include("layouts/navbar") -%>
        <!-- Masthead-->
        
        <!-- Contact-->
        <section class="page-section-5">
            <div class="container px-4 px-lg-5">

                </div>
            </div>
            <br><br>
            <div class="row">
                <div class="offset-3 col-6">
                    <div class="row g-3">
                        <div class="col-sm-4">
                            <span class="examinerViewTitle">Exam Type: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].appointmentType%></span>
                        </div>
                        <div class="col-sm-4">
                            <span class="examinerViewTitle">Date: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].date.toISOString().slice(0, 10);%></span>
                            </div>
                        <div class="col-sm-4">
                            <span class="examinerViewTitle">Time: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].time%></span>
                        </div>
                    </div> <br>
                    <form method="POST" action="/updateResult">
                        <h4 class="mb-5 text-center fs-2 examinerView text-uppercase">Test taker's personal Information</h4>
                        <div class="row g-3">
                            <input id="appointmentId" name="appointmentId" type="hidden" value=<%= appointmentDetails[0]._id %>>
                            <input id="userId" name="userId" type="hidden" value=<%= appointmentDetails[0].userId._id %>>
                            <input id="appointmentType" name="appointmentType" type="hidden" value=<%= appointmentDetails[0].appointmentType %>>
                            <div class="col-sm-6">
                                <p> <span class="examinerViewTitle"> First name:</span> <span class="examinerViewValue"> <%=appointmentDetails[0].userId.firstName%></span></p>
                            </div>
            
                            <div class="col-sm-6">
                                <p><span class="examinerViewTitle">Age: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].userId.age%></span></p>
                            </div>
                            
                        </div>
                        <div class="row g-3">
                            <div class="col-sm-6">
                                <p><span class="examinerViewTitle">Last name: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].userId.lastName%></span></p>
                            </div>
                            <div class="col-sm-6">
                                <p><span class="examinerViewTitle">Licence Number: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].userId.licenceNumber%></span></p>
                            </div>
                        </div>
                        <br><br>
                        <h4 class="mb-5 text-center fs-2 examinerView text-uppercase">Test taker's vehicle Information</h4>
                        <div class="row g-3">
                            <div class="col-sm-4">
                                <p><span class="examinerViewTitle">Make: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].userId.carInformation.make%></span></p>
                            </div>
            
                            <div class="col-sm-4">
                                <p><span class="examinerViewTitle">Model: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].userId.carInformation.model%></span></p>
                            </div>

                            <div class="col-sm-4">
                                <p><span class="examinerViewTitle">Year: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].userId.carInformation.year%></span></p>
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col-sm-8">
                                <p><span class="examinerViewTitle">Plate number: </span> <span class="examinerViewValue"> <%=appointmentDetails[0].userId.carInformation.plateNumber%></span></p>
                            </div>
                        </div><br>          

                        <div class="row g-3">

                            <div class="col-sm-6">
                                <p class="examinerCorrectionFields">Please select the result:</p>
                                <input type="radio" id="pass" name="result" value="pass" required>
                                <label for="age1">Pass</label> &nbsp;
                                <input type="radio" id="fail" name="result" value="fail">
                                <label for="age2">Fail</label><br>  
                            </div>
                            <div class="col-sm-6">
                                <p class="examinerCorrectionFields"> Test comments</p> 
                                <input type="text" class="form-control" id="comments" name="comments" value="Excellent" required>
                            </div>
                        </div>
                        <div class="row g-3 text-center p-5">
                            <div class="col-sm-10">
                                <button class="btn btn-primary text-uppercase" id="submitButton" name="submitButton" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>


                </div>
            </div>
        </section>
        <!-- Footer-->
        <%- include("layouts/footer")-%>
        <!-- Bootstrap core JS-->
        <%- include("layouts/scripts")-%>        
    </body>
</html>
